@model IEnumerable<LibraryApp.Models.Loan>

@{
    ViewData["Title"] = "My Loans";
}

<h1>My Loans</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Book
            </th>
            <th>
                Loan date
            </th>
            <th>
                Return date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item?.Book.Title
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
            </tr>
        }
    </tbody>
</table>
